{
  "name": "pollution-dispersion-simulator",
  "version": "2.0.0",
  "description": "Advanced pollution dispersion simulation with real-world data integration",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "validate": "node scripts/validate.js",
    "deploy": "npm run build && npm run validate && gh-pages -d dist",
    "benchmark": "node scripts/benchmark.js",
    "docs": "jsdoc -d docs scripts/*.js",
    "analyze": "npm run build && npx bundlesize"
  },
  "dependencies": {
    "gl-matrix": "^3.4.3",
    "d3": "^7.8.5",
    "plotly.js": "^2.26.0",
    "three": "^0.156.1",
    "stats.js": "^0.17.0",
    "dat.gui": "^0.7.9",
    "web-workers": "^1.7.0"
  },
  "devDependencies": {
    "vite": "^4.4.9",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "@types/jest": "^29.5.5",
    "jsdoc": "^4.0.2",
    "gh-pages": "^6.0.0",
    "bundlesize": "^0.18.1",
    "cypress": "^13.3.0",
    "lighthouse": "^11.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500kb"
    }
  ],
  "keywords": [
    "pollution",
    "dispersion",
    "simulation",
    "fluid-dynamics",
    "environmental",
    "visualization",
    "webgl",
    "real-time"
  ],
  "author": "Joseph KWK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joseph-kwk/Fluid-Simulation.git"
  },
  "bugs": {
    "url": "https://github.com/joseph-kwk/Fluid-Simulation/issues"
  },
  "homepage": "https://joseph-kwk.github.io/Fluid-Simulation/"
}
